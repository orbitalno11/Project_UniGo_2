<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MapDetail">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/mappic"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/bangmodmap"/>

    <TextView
        android:id="@+id/texts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mappic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/thaisansnueue"
        android:textSize="25dp"
        android:text="เลือกกลุ่มอาคารที่สนใจ"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textStyle="normal" />

    <ImageButton
        android:id="@+id/eng_btn"
        android:layout_below="@id/texts"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eng_btn"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/cb_btn"
        android:layout_below="@id/eng_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cb_btn"
        android:background="@android:color/transparent"/>

    <ImageButton
        android:id="@+id/sci_btn"
        android:layout_below="@id/cb_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sci_btn"
        android:background="@android:color/transparent"/>

</RelativeLayout>