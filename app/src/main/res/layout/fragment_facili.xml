<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/mapbg"
tools:context=".Facili">

<!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:id="@+id/atm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/shop"
        android:layout_alignTop="@+id/food"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/transparent"
        android:src="@drawable/atm" />

    <ImageButton
        android:id="@+id/food"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="37dp"
        android:background="@android:color/transparent"
        android:src="@drawable/food" />

    <ImageButton
        android:id="@+id/shop"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="168dp"
        android:background="@android:color/transparent"
        android:src="@drawable/shop" />

    <ImageButton
        android:id="@+id/post"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="162dp"
        android:background="@android:color/transparent"
        android:src="@drawable/post" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/atm"
        android:layout_alignParentStart="true"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="-2dp"
        android:text="ATM"
        android:fontFamily="@font/thaisansnueue"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="73dp"
        android:fontFamily="@font/thaisansnueue"
        android:text="Food/Drink"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/post"
        android:layout_alignParentStart="true"
        android:layout_marginStart="83dp"
        android:layout_marginBottom="-2dp"
        android:text="Store"
        android:fontFamily="@font/thaisansnueue"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/textView8"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/thaisansnueue"
        android:text="Post Office"
        android:textSize="20dp" />

</RelativeLayout>